<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainPane" prefHeight="600.0" prefWidth="800.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21.0.8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bankservice1.controller.MainViewController">
    <left>
        <VBox spacing="10.0" style="-fx-background-color: #f8f9fa;" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            <children>
            <VBox prefHeight="112.0" prefWidth="123.0">
               <children>
                  <BorderPane prefHeight="200.0" prefWidth="200.0">
                     <center>
                        <ImageView fitHeight="74.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
                           <image>
                              <Image url="@../../../../icons/profile.png" />
                           </image></ImageView>
                     </center>
                     <bottom>
                        <Label fx:id="name" BorderPane.alignment="CENTER" />
                     </bottom>
                  </BorderPane>
               </children>
            </VBox>
                <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="메뉴" />
                <Button fx:id="NoticeViewButton" onAction="#showNoticeView" styleClass="transparent-button" text="• 공지사항" />
                <Button onAction="#showProductManagement" styleClass="transparent-button" text="• 상품 관리" />
                <Button styleClass="transparent-button" text="• 계좌 개설 승인" />
                <Button onAction="#showCustomerView" styleClass="transparent-button" text="• 고객 조회" />
                <Button onAction="#showMypage" styleClass="transparent-button" text="• 마이페이지" />
                <Button fx:id="ChatButton" onAction="#showChatView" styleClass="transparent-button" text="• 채팅" />
                <Label layoutX="25.0" layoutY="25.0" style="-fx-font-weight: bold; -fx-font-size: 16px;" text="관리자 메뉴">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Label>
                <Button fx:id="employeeSearch" onAction="#showEmployeeCheckView" styleClass="transparent-button" text="• 사원 조회" />
            <BorderPane prefHeight="121.0" prefWidth="79.0">
               <bottom>
                  <Button mnemonicParsing="false" styleClass="transparent-button" text="로그아웃" BorderPane.alignment="CENTER" />
               </bottom>
            </BorderPane>
            </children>
        </VBox>
    </left>
    <center>
        <VBox BorderPane.alignment="CENTER" VBox.vgrow="ALWAYS" fx:id="contentArea" >
        </VBox>
    </center>
</BorderPane>
