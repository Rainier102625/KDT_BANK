        </VBox>
    </top>

    <center>
        <HBox alignment="CENTER" spacing="30">
            <padding>
                <Insets bottom="30" left="50" right="50" />
            </padding>

            <!-- 오른쪽: 개인 정보 카드 -->
            <VBox spacing="20" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;">
                  <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="상품 정보" />
            <GridPane>
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
