                  <TextField fx:id="productduration" promptText="6" GridPane.rowIndex="4" />
                  <TextField fx:id="productrate" promptText="2" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                   <ComboBox fx:id="typeCombo" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                       <items>
                           <FXCollections fx:factory="observableArrayList">
                               <String fx:value="입출금" />
                               <String fx:value="적금" />
                               <String fx:value="예금" />
                           </FXCollections>
                       </items>
                   </ComboBox>
               </children>
            </GridPane>
            <GridPane>
              <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="270.4000244140625" minWidth="10.0" prefWidth="270.4000244140625" />
