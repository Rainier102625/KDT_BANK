<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/21.0.8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bankservice1.controller.SignupController">

    <children>
        <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #E7EDF7;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

            <VBox alignment="CENTER" maxWidth="300.0" prefHeight="446.0" prefWidth="250.0" spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 5);">

                <Label text="BANK Service">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>

                <!-- 이름 -->
                <VBox spacing="5">
                    <Label style="-fx-font-size: 12px;" text="이름" />
                    <TextField fx:id="nameField" promptText="홍길동" />
                </VBox>

                <!-- ID -->
                <VBox spacing="5">
                    <Label style="-fx-font-size: 12px;" text="ID" />
                    <TextField fx:id="idField" promptText="Create ID" />
                </VBox>

                <!-- 비밀번호 -->
                <VBox spacing="5">
                    <Label style="-fx-font-size: 12px;" text="Password" />
                    <PasswordField fx:id="pwField" promptText="Create password" />
                </VBox>

                <VBox spacing="5">
                    <Label style="-fx-font-size: 12px;" text="전화번호" />
               <TextField fx:id="pnumField" promptText="010-1234-5678" />

                    <Label style="-fx-font-size: 12px;" text="생년월일" />
               <TextField fx:id="birthField" promptText="19920101" />

                    <Label style="-fx-font-size: 12px;" text="부서" />
               <TextField fx:id="departField" promptText="영업부" />

                    <Label style="-fx-font-size: 12px;" text="직급" />
               <TextField fx:id="rankField" promptText="사원" />
                </VBox>

                <!-- 버튼 -->
                <Button maxWidth="Infinity" onAction="#handleSignupButton" style="-fx-background-color: #2563eb;                                -fx-text-fill: white;                                -fx-font-size: 14px;                                -fx-background-radius: 5;" text="회원가입" />

                <!-- 로그인 안내 -->
                <Label style="-fx-font-size: 12px; -fx-text-fill: #6b7280;" text="이미 계정이 있으신가요?" />
            <Hyperlink fx:id="moveSignin" onAction="#handelsignin" text="로그인" />
            </VBox>
        </VBox>
    </children>
</AnchorPane>
